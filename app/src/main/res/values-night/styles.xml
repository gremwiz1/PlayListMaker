<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="cornerRadius">@dimen/corner_radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="iconTint">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="arrowBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/margin_right_24</item>
        <item name="android:src">@drawable/dark_mode</item>
    </style>
    <style name="switchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:thumbTint">@color/cornflower_blue</item>
    </style>
    <style name="editSearchText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint">@string/input_hint</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:drawablePadding">@dimen/icon_padding_8</item>
        <item name="android:padding">@dimen/padding_8</item>
    </style>
</resources>