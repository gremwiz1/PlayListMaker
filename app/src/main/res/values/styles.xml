<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="cornerRadius">@dimen/corner_radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="textSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="linearLayoutSettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin_right_8</item>
        <item name="android:layout_marginTop">@dimen/margin_top_40</item>
    </style>

    <style name="arrowBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/margin_right_24</item>
        <item name="android:src">@drawable/arrow_back</item>
    </style>

    <style name="arrowBackAudioPlayer">
        <item name="android:src">@drawable/arrow_back</item>
    </style>

    <style name="switchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="editSearchText">
        <item name="android:hint">@string/input_hint</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorHintEditText</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:drawablePadding">@dimen/icon_padding_8</item>
        <item name="android:padding">@dimen/padding_8</item>
    </style>

    <style name="titleFieldInPlayer">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="valueFieldInPlayer">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="nameTrack">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="nameArtist">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="timeToPlay">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="color">@color/dark_blue</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>